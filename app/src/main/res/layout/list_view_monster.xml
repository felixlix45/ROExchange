<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layoutParentMonster"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/no_image_available"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="7dp">

        <TextView
            android:id="@+id/tvMonsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="?android:attr/colorPrimary"
            android:hint="Monster Name"/>

        <TextView
            android:id="@+id/tvMonsterRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/colorPrimary"
            android:layout_marginTop="2dp"
            android:hint="Monster Race" />

        <TextView
            android:id="@+id/tvMonsterElement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/colorPrimary"
            android:layout_marginTop="2dp"
            android:hint="Monster Element" />

        <TextView
            android:id="@+id/tvMonsterSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/colorPrimary"
            android:layout_marginTop="2dp"
            android:hint="Monster Size" />


    </LinearLayout>

</LinearLayout>