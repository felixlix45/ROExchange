<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="?android:attr/colorPrimary"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_above="@id/tvVal40"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tvVal40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:text="@string/valhala_guides"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_container_valhalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_marginTop="15dp"
            android:id="@+id/valhala40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVal40"
            android:adjustViewBounds="true" />


        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/valhala60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala40"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/valhala80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala60"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/valhala100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala80"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ValItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>


        <TextView
            android:id="@+id/tvValGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/valhalla_guides_global"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ValGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</ScrollView>