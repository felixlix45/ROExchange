<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_above="@id/tvVal40"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tvVal40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:text="Valhala Guides"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_container_valhalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/background"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.jsibbold.zoomage.ZoomageView
            android:layout_marginTop="15dp"
            android:id="@+id/valhala40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVal40"
            android:adjustViewBounds="true"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.2"
            app:zoomage_maxScale="4"/>


        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/valhala60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala40"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.2"
            app:zoomage_maxScale="4"/>

        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/valhala80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala60"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.2"
            app:zoomage_maxScale="4"/>

        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/valhala100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/valhala80"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.2"
            app:zoomage_maxScale="4"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/ValItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

    </LinearLayout>


</ScrollView>