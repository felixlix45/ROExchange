<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="3dp"
    android:id="@+id/layoutParentRecipe">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/no_image_available"/>

        <ImageView
            android:id="@+id/ivRecipeStation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/no_image_available"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:hint="Recipe Name"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvRecipeIText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:hint="Recipe IText"
            android:textSize="15sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivIngre1"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <ImageView
                    android:id="@+id/ivIngre2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="9dp"/>

                <ImageView
                    android:id="@+id/ivIngre3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="9dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ivIngre4"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <ImageView
                    android:id="@+id/ivIngre5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="9dp"/>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>