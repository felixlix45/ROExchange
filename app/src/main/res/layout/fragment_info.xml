<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_rounded_gray">

            <ImageButton
                android:id="@+id/ibGuide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icons8_user_manual_80"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:text="General Guides"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_rounded_gray">

            <ImageButton
                android:id="@+id/ibMapGinger"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icons8_christmas_tree_64"
                android:background="?attr/selectableItemBackgroundBorderless" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Ginger"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rounded_gray">

        <ImageButton
            android:id="@+id/ibMonsterList"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/icons8_werewolf_96"
            android:background="?attr/selectableItemBackgroundBorderless" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monster List"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"/>

    </LinearLayout>


</LinearLayout>